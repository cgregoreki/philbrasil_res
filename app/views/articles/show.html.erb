<div class="container">

   <% if @notice != nil %>
   <!-- show success message on register new article -->
   <div class="row">
      <div class="col s12 center">
          <div class="chip" style="background-color: #3ef281;">
             <%= @notice %>
             <i class="close material-icons">close</i>
           </div>
      </div>
   </div>
   <% end %>
   <div class="row">
      <div class="col s12 pb-text-justify">
         <h5><%= @article.title %></h5>
      </div>
   </div>
   <div class="row">
      <div class="col s12">
         <b><%= @article.author %> </b>
      </div>
   </div>
   <div class="row">
      <div class="col s4">
         Ano: <%= @article.year %>
      </div>
      <div class="col s4">
         Revista: <%= @article.magazine.blank? ? "---" : @article.magazine %>
      </div>
      <div class="col s4">
         Volume: <%= @article.vol_number <= 0 ? "---" : @article.vol_number %>
      </div>
   </div>
   <div class="row">
      <div class="col s4">
         Páginas:  <%= @article.first_page %> <% if @article.last_page != nil %>- <%= @article.last_page %><% end %>
      </div>
      <div class="col s4">
         Edição: <%= @article.edition.blank? ? "---" : @article.edition %>
      </div>
      <div class="col s4">
         Tradutor: <%= @article.translator.blank? ? "---" : @article.translator %>
      </div>
   </div>
   <div class="row">
      <div class="col s4">
         Editora: <%= @article.pub_company.blank? ? "---" : @article.pub_company %>
      </div>
      <div class="col s4">
         Cidade: <%= @article.pub_company_city.blank? ? "---" : @article.pub_company_city %>
      </div>
      <div class="col s4">
         Número de Acessos: <%= @article.times_visited == nil ? 0 : @article.times_visited %>
      </div>
   </div>
   <div class="row">
      <div class="col s12">
         Palavras-chave: <%= @article.keywords.blank? ? "---" : @article.keywords %>
      </div>
   </div>
   <hr/>
   <div class="row">
      <div class="col s12">
         <h4>Bibtex:</h4>
      </div>
   </div>
   <div class="row">
      <div class="col s12">
         <%= @article.author %>. <b><%= link_to @article.title, article_path(@article.id) %>.</b> <i>In: <%= @article.magazine %></i><% if @article.vol_number != nil %>, <%= @article.vol_number%><% end %><% if @article.year != nil %>, <%= @article.year %>. <% else %>. <% end %>
         <% if @article.translator != nil %>Tradução de <%= @article.translator %>. <% end %>
         <ul class="collapsible popout" data-collapsible="accordion">
            <li>
               <div class="collapsible-header"><i class="material-icons">library_books</i>Bibtex</div>
               <div class="collapsible-body">
                  <p>
                  <pre class="language-latex">
                        <span class="bib">@article{<%= @article.magazine %><% if @article.year != nil %><%= @article.year %><% else %><% end %>,</span>
                        <span class="Author">Author = {<%= @article.author %>},</span>
                        <span class="Journal">Journal = {<%= @article.magazine %>},</span>    
                        <span class="Title">Title = {<%= @article.title %>},</span>
                        <span class="Volume">Volume = {<% if @article.vol_number != nil %><%= @article.vol_number%><% end %>},</span>
                        <span class="Year">Year = {<% if @article.year != nil %><%= @article.year %><% else %><% end %>}}</span>
                      </pre>
                  </p>
               </div>
            </li>
         </ul>
      </div>
   </div>
   <div class="row" style="padding-top: 15px;">
      <div class="col s8">
         <%= form_for @article, url: article_access_path(@article.id), method: :post do |f| %>
         <!-- <button class="btn waves-effect waves-light green" type="submit" name="action">Acessar</button> -->
         <%= f.submit "Acessar", class: "btn waves-effect waves-light green btn-block" %>
         <% end %>
      </div>
      <div class="col s4">
         <%= form_for @article, url: article_report_path(@article.id), method: :post do |f| %>
         <%= f.submit "Reportar", class: "btn waves-effect waves-light red btn-block" %>
         <% end %>
      </div>
   </div>
</div>