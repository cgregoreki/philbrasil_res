  .btn-delete {
    cursor: pointer;
  }
</style>

<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Últimos Artigos Registrados</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <!-- <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
              <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
              </ul>
          </li> -->
          <!-- <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li> -->
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <!-- <p>Simple table with project listing with progress and editing options</p> -->
        <!-- start project list -->



        <% if flash[:notice_last_n_registered_articles] %>
            <div class="row" style="margin-top: 10px;">
              <div class="col-md-8 col-md-offset-2 center">

                <div class="alert alert-success" role="alert">
                  <!--<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>-->
                  <span class="sr-only">Mensagem:</span>
                  <%= flash[:notice_last_n_registered_articles] %>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>

              </div>
            </div>
        <% end %>


        <% if flash[:error_notice_last_n_registered_articles] %>
            <div class="row" style="margin-top: 10px;">
              <div class="col-md-8 col-md-offset-2 center">

                <div class="alert alert-error" role="alert">
                  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                  <span class="sr-only">Mensagem:</span>
                  <%= flash[:error_notice_last_n_registered_articles] %>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>

              </div>
            </div>
        <% end %>

        <table class="table table-striped projects">
          <thead>
          <tr>
            <th style="width: 10%">#</th>
            <th style="width: 20%">Título</th>
            <th style="width: 20%">Autor</th>
            <th style="width: 20%">Palavras-Chave</th>
            <th style="width: 20%">Revista</th>
            <th style="width: 10%">Opções</th>
          </tr>
          </thead>
          <tbody>
          <% @last_N_registered_articles.each do |article| %>
              <tr>
                <td><%= article.id %></td>
                <td>
                  <!--<a href="#"><%= article.title %></a>-->
                  <%= link_to article.title, article_path(article.id) %>
                  <!--link_to article.title, article_with_title_path(article, :title => article.title)-->

                  <br/>
                  <small>Created <%= article.created_at %></small>
                </td>
                <td>
                  <a>
                    <%= article.author %>
                  </a>
                </td>
                <td class="project_progress">
                  <!-- <div class="progress progress_sm">
                      <div class="progress-bar bg-green" role="progressbar" data-transition goal="57"></div>
                  </div>
                  <small>57% Complete</small> -->
                  <a><small><%= article.keywords %></small></a>
                </td>
                <td>
                  <a><%= article.magazine %></a>
                </td>
                <td>
                  <a><i title="edit" class="glyphicon glyphicon-edit glyphicon-dashboard-size btn-edit" data-toggle="modal" data-target="#exampleModal2" onclick="changeModalEditArticleParams(<%= article.to_json(:include => [:categories]) %>, 'lnra');" ></i></a>
                  <a><i title="delete" class="glyphicon glyphicon-remove glyphicon-dashboard-size btn-delete" data-toggle="modal" data-target="#exampleModal" onclick="changeModalParams(<%= article.to_json(:include => [:categories]) %>, 'lnra');"></i></a>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <!-- end project list -->
      </div>
    </div>
  </div>
</div>

