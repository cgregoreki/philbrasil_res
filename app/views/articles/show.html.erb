<%= render 'header' %>

<main>

  <% if notice != nil %>
  <!-- show success message on register new article -->
  <div class="row">
    <div class="col s12">
      <div class="container center-align">
        <div class="z-depth-4 padding-chip-notice">
          <%= notice %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col s2"></div>
    <div class="col s8 article-title">
      <h2><%= @article.title %></h2>
    </div>
    <div class="col s2"></div>
  </div>

  <div class="row">
    <div class="col s2"></div>
    <div class="col s8 article-author">
      <b><%= @article.author %>  </b>
    </div>
    <div class="col s2"></div>
  </div>  

  <div class="row">
    <div class="col s2"></div>
    <div class="col s8">
      <table class="striped">
        <tbody>
          <tr>
            <td><b>Ano:</b></td><td><%= @article.year%></td>
          </tr>
          <tr>
            <td><b>Revista:</b></td> <td> <%= @article.magazine%> </td>
          </tr>
          <tr>
            <td><b>Volúme Número:</b></td> <td> <%= @article.vol_number%> </td>
          </tr>
          <tr>
            <td><b>Tradutor:</b></td> <td> <%= @article.translator%> </td>
          </tr>
          <tr>
            <td><b>Quantidade de acessos:</b></td> <td> <%= @article.times_visited%> </td>
          </tr>
          <tr>
            <td><b>Editora:</b></td> <td> <%= @article.pub_company%> </td>
          </tr>
          <tr>
            <td><b>Cidade:</b></td> <td> <%= @article.pub_company_city%> </td>
          </tr>
          <tr>
            <td><b><i>In:</i></b></td> <td> <%= @article.inside%> </td>
          </tr>
          <tr>
          <td>Acesse:</td><td>
          
              <%= render 'form_access_article' %>

          </td>
          </tr>

        </tbody>
      </table>
    </div>
    <div class="col s2"></div>
  </div>
 
</main>
