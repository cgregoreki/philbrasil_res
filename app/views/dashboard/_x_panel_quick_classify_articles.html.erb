<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Alguns Artigos para Classificar </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <!-- <p>Simple table with project listing with progress and editing options</p> -->
                <!-- start project list -->

              <% if flash[:notice_classify_articles] %>
                  <div class="row" style="margin-top: 10px;">
                    <div class="col-md-8 col-md-offset-2 center">

                      <div class="alert alert-success" role="alert">
                        <!--<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>-->
                        <span class="sr-only">Mensagem:</span>
                        <%= flash[:notice_classify_articles] %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                    </div>
                  </div>
              <% end %>

              <% if flash[:error_notice_classify_articles] %>
                  <div class="row" style="margin-top: 10px;">
                    <div class="col-md-8 col-md-offset-2 center">

                      <div class="alert alert-error" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Mensagem:</span>
                        <%= flash[:notice_classify_articles] %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                    </div>
                  </div>
              <% end %>

                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 10%">#</th>
                            <th style="width: 20%">Título</th>
                            <th style="width: 20%">Autor</th>
                            <th style="width: 20%">Palavras-Chave</th>
                            <th style="width: 20%">Revista</th>
                            <th style="width: 10%">Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @n_uncategorized_articles.each do |article|%>
                        <tr>
                          <td><%= article.id %></td>
                          <td>
                            <!--<a href="#"><%= article.title %></a>-->
                            <%= link_to article.title, article_path(article.id) %>
                            <!--link_to article.title, article_with_title_path(article, :title => article.title)-->

                            <br />
                            <small>Created <%= article.created_at %></small>
                          </td>
                          <td>
                            <a>
                              <%= article.author %>
                            </a>
                          </td>
                          <td class="project_progress">
                            <!-- <div class="progress progress_sm">
                                <div class="progress-bar bg-green" role="progressbar" data-transition goal="57"></div>
                            </div>
                            <small>57% Complete</small> -->
                            <a><%= article.keywords %></a>
                          </td>
                          <td>
                            <a><%= article.magazine %></a>
                          </td>
                          <td>
                            <a><i title="edit" class="glyphicon glyphicon-edit glyphicon-dashboard-size" data-toggle="modal" data-target="#exampleModal2" onclick="changeModalEditArticleParams(<%= article.to_json(:include => [:categories]) %>, 'clua');" ></i></a>
                            <a><i title="delete" class="glyphicon glyphicon-remove glyphicon-dashboard-size" data-toggle="modal" data-target="#exampleModal" onclick="changeModalParams(<%= article.to_json %>, 'clua');"></i></a>
                          </td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
                <!-- end project list -->
            </div>
        </div>
    </div>
</div>