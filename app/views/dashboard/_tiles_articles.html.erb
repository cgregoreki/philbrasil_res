<div class="row tile_count">
    <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Total de Artigos</span>
        <div class="count"><%= @total_number_of_articles %></div>
        <!-- <span class="count_bottom"><i class="green">4% </i> From last Week</span> -->
    </div>
    <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-clock-o"></i> Artigos Classificados</span>
        <div class="count blue"><%= @total_number_of_classified_articles %></div>
        <span class="count_bottom"><i class="green"><!--<i class="fa fa-sort-asc"></i>--> <%= (@total_number_of_classified_articles/@total_number_of_articles).to_s %>% </i> do total de artigos</span>
    </div>
    <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Artigos Reportados</span>
        <div class="count green"><%= @total_number_of_reported_articles %></div>
        <span class="count_bottom"><i class="green"><!--<i class="fa fa-sort-asc"></i>--><%= (@total_number_of_reported_articles/@total_number_of_articles).to_s %>% </i> do total de artigos</span>
    </div>
    <div class="col-md-3 col-sm-4 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Artigos Reportados (unresolved)</span>
