<div class="row">

  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Cadastre uma Categoria</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br/>
        <%= form_for(@category, :url => url_for(:controller => 'dashboard', :action => 'category_create'), :html => {:class => 'form-horizontal form-label-left'}) do |f| %>
        <div class="form-group">
          <%= f.label :name, 'Nome:', :class => 'control-label col-md-3 col-sm-3 col-xs-12' %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :name, placeholder: 'Digite o nome da Categoria', required: 'required', class: 'form-control col-md-7 col-xs-12' %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Descrição:
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_area :description, rows: '12', style: 'width: 100%;', placeholder: 'Escreva uma breve descrição.' %>
            </div>
          </div>
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="row">
              <div class="col-md-3 col-sm-6 col-xs-12 col-md-offset-3">
                <button class="btn btn-primary btn-block" type="reset">Reset</button>
              </div>
              <div class="col-md-3 col-sm-6 col-xs-12"  >
                <button type="submit" class="btn btn-success btn-block">Cadastrar!</button>
              </div>
            </div>
          </div>

        <% end %>
        <!--</form>-->
      </div>
    </div>
  </div>
</div>